<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme -->
    <style name="Base.Theme.Yugved4" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/emerald_green</item>
        <item name="colorPrimaryVariant">@color/emerald_green_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/emerald_green_light</item>
        <item name="colorSecondaryVariant">@color/emerald_green</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Surface Colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorOutline">@color/outline_light</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/emerald_green</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.Yugved4" parent="Base.Theme.Yugved4" />
</resources>